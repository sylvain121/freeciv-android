<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    Base application theme, dependent on API level. This theme is replaced
    by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="city_name">
		<item name="android:textColor">#000</item>
		<item name="android:textSize">30sp</item>
	</style>
	<style name="city_info">
		<item name="android:textColor">#000</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="city_info_line">
		<item name="android:padding">3sp</item>
	</style>
	
	
	
	<style name="dialog_activity">
		<item name="android:background">#fff</item>
	</style>	

	<style name="clean" parent="android:Theme">
	    <item name="android:textColor">#000</item>
		<item name="android:textSize">20sp</item>
		<item name="android:background">#FFF</item>
	</style>
	
	<style name="civ_splash" parent="android:Theme.NoTitleBar">
	    <item name="android:textColor">#000</item>
		<item name="android:textSize">20sp</item>
		<item name="android:background">@drawable/dark_splash</item>
	</style>
	
	<style name="main_title">
		<item name="android:textColor">#000</item>
		<item name="android:textSize">30sp</item>
	</style>
	
</resources>
